<main>

    <ol class="container breadcrumb transparent">
        <li><a href="#">Home</a></li>
        <li><a href="#">Library</a></li>
        <li class="active">Data</li>
    </ol>

    {{#if isAdmin}}
        <!-- Add Content Buttons -->
        <div class="container">

            <a href="/project/create">
                <button class="btn btn-default btn-sm"><span class="glyphicon glyphicon-plus"></span> New Project</button>
            </a>
            <a href="/customer/create">
                <button class="btn btn-default btn-sm">New Customer</button>
            </a>
            <a href="/team/create">
                <button class="btn btn-default btn-sm">Create Team</button>
            </a>
        </div>
    {{/if}}

    <!-- Content -->
    <div class="container">

        <!-- Left Section -->
        <div class="col-lg-3 section">

            <!--  Graphic  -->
            <div class="section">
                <img class="section" src="/images/circle.png">
            </div>

            <div class="panel panel-default">
                <div class="panel-body">A Basic Panel</div>
            </div>

            <!--  Date  -->
            <div class="section">
                <span class="glyphicon glyphicon-hourglass"></span>
                {{project.day}}.{{project.month}}
                <!--{{project.year}}-->
            </div>
            
            <hr>
            
            <!--  Team  -->
            <div class="section">
                <span class="glyphicon glyphicon-user"></span>
                {{project.projectTeam.teamName}}
            </div>
            
            <hr>
            
            <!--  Commits  -->
            <div class="">
                <span class="glyphicon glyphicon-pencil"></span>
                <a href="#">Commits <span class="badge">42</span></a>
            </div>

        </div>

        <!-- Right Section -->
        <div class="col-lg-9 section">

            <!-- Project Name -->
            <div class="">
                <h3>{{project.projectName}}</h3>
                <hr>
                <p>
                    {{project.projectCustomer.customerName}}  |  {{project.date}}
                </p>
                <hr>
            </div>

            {{#if isAdmin}}
                <!-- Data Squares -->
                <div class="text-uppercase">
                    <div class="info-squares">
                        Project Price
                        <h5><span class="glyphicon glyphicon-eur"></span> {{project.projectPrice}}</h5>
                    </div>

                    <div class="info-squares">
                        Hours spent
                        <h5>{{project.projectWorkingHours}}</h5>
                    </div>

                    <div class="info-squares white">
                        Status
                        <div class="progress">
                            <div class="progress-bar"
                                 role="progressbar"
                                 aria-valuenow=""
                                 aria-valuemin="0"
                                 aria-valuemax="100"
                                 style="width: {{this.projectProgress}}%">
                            </div>
                        </div>
                        25%
                    </div>

                    <div class="info-squares">
                        Hours provision
                        <h5>{{project.projectPrice}}</h5>
                    </div>

                    <div class="info-squares">
                        Other expenses
                        <h5>$ {{project.projectExpenses}}</h5>
                    </div>

                    <div class="info-squares">
                        Spent money
                        <h5>{{project.projectPrice}}</h5>
                    </div>

                    <div class="info-squares red">
                        Total Price
                        <h5>{{project.projectPrice}}</h5>
                    </div>
                </div>
                <hr>
            {{/if}}

            <!-- Project Description -->
            <div class="section">
                <h5>Description</h5>
                <p>
                    Am if number no up period regard sudden better.
                    Decisively surrounded all admiration and not you.
                    Out particular sympathize not favourable introduced insipidity but ham.
                    Rather number can and set praise. Distrusts an it contented perceived attending oh.
                    Thoroughly estimating introduced stimulated why but motionless.
                </p>
                <div class="btn btn-xs btn-default center">Show More</div>
            </div>

            <!--  Tasks  -->
            <h5>Project Tasks</h5>
            <table class="table" id="activeProjectsTable">

                <!-- Table Head -->
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Deadline</th>
                    <th>Status</th>
                    <th>Details</th>
                </tr>

                <!-- Table Data -->
                {{#each project.projectTasks}}
                    <tr>
                        <!-- Task Name -->
                        <td class="" id="taskName"><h6>{{this.taskName}}</h6></td>

                        <!-- Task Description -->
                        <td class="" id="taskDescription">{{this.taskDescription}}</td>

                        <!-- Task Deadline -->
                        {{#if this.isOverdue}}
                        <td class="alert-warning" id="taskDeadline" >{{this.date}}</td>
                        {{/if}}

                        {{#unless this.isOverdue}}
                            <td class="" id="taskDeadline" >{{this.date}}</td>
                        {{/unless}}

                        <!-- Task Status -->
                        {{#if this.taskActive}}
                        <td class="" id="taskActive">Active</td>
                        {{/if}}

                        {{#unless this.taskActive}}
                            <td class="" id="taskActive">Closed</td>
                        {{/unless}}

                        <!-- Details Button -->
                        <td>
                            <a href="/task/details/{{this.id}}"><button class="btn btn-primary">More</button></a>
                        </td>
                    </tr>
                {{/each}}
            </table>

            <a href="/project/list"><button class="btn btn-default">Back</button></a>
        </div>
    </div>
</main>