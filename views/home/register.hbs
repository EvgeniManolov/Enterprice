<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-inline" action="/register" method="POST">
            <fieldset>

                <div class="form-group">
                    <div class="col-sm-1 ">
                        <input type="text" class="form-control" id="name" placeholder="Enter your name"
                               name="register[name]" value="{{register.name}}">
                    </div>
                </div><br />

                <div class="form-group">
                    <div class="col-sm-1 ">
                        <input type="email" class="form-control" id="email" placeholder="Email"
                               name="register[email]" value="{{register.email}}">
                    </div>
                </div><br />

                <div class="form-group">
                    <div class="col-sm-4 ">
                        <input type="password" class="form-control" id="password" placeholder="Password"
                               name="register[password]" value="{{register.password}}">
                    </div>
                </div><br />

                <div class="form-group">
                    <div class="col-sm-4 ">
                        <input type="password" class="form-control" id="reenterPassword" placeholder="Re-enter Password"
                               name="register[reenterPassword]" value="{{register.reenterPassword}}">
                    </div>
                </div><br />

                <div class="form-group">
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="phone" placeholder="Phone number"
                               name="register[phone]" value="{{register.phone}}">
                    </div>
                </div><br />

                <div class="form-group">
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="address" placeholder="Enter your address"
                               name="register[address]" value="{{register.address}}">
                    </div>
                </div><br />

                <div>
                    <div class="col-sm-4 ">
                        <input type="checkbox" class="form-control" id="isAdmin"
                               name="register[isAdmin]" value="0"><p>Administrator</p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a href="./" class="">Login page</a>
                        <button type="submit" class="btn btn-primary">Create account</button>
                    </div>
                </div>

            </fieldset>
        </form>


    </div>
</div>
