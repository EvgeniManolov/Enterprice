
<!--  Login / Index View -->
<div class="container-fluid">
    <div class="container-full">

    <!--  Company Logo  -->
    <div class="home-login-container text-center">
        <img src="/images/logo.png" width="100px">
        <h5>Enterprice</h5>
    </div>

    <!--  Login Form  -->
    <form  class="form center-block" style="width: 60%" action="/" method="POST">

        <!--  Username / mail  -->
        <div class="form-group">
            <label class="sr-only" for="email" >Enter your email</label>
            <div class="control-label">
                <input type="text" class="form-control input-lg" id="inputEmail" placeholder="Email" name="email" required>
            </div>
        </div>

        <!--  Password  -->
        <div class="form-group ">
            <label class="sr-only" for="password" >Enter your password</label>
            <div class="control-label">
                <input type="password" class="form-control input-lg" id="inputPassword" placeholder="Password" name="password" required>
            </div>
        </div>

        <!--  Submit Button  -->
        <div class="panel-footer">
            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary btn-lg ">Login</button>
                </div>
            </div>
        </div>

    </form>

    <!--  New Account Link / Trigger Modal   -->
    <div class="text-center" data-toggle="modal" data-target="#myModal">
        <div class="btn btn-link">
            Create new account
        </div>

    </div>

    <!-- Modal Register -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">

            <!--  Modal Content  -->
            <div class="modal-content">

                <!--  Header  -->
                <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Register</h4>
                    </div>

                <!--  Body  -->
                <div class="modal-body">

                    <!--  Form  -->
                    <form class="form-horizontal" action="/user/register" method="POST">

                        <!--  Full name  -->
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="fullName">Full Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control center" id="fullName" placeholder="Full Name" name="fullName">
                            </div>
                        </div>

                        <!--  Email  -->
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="email">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control center" id="email" placeholder="Email" name="email">
                            </div>
                        </div>

                        <!--  Password  -->
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="password">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control center" id="password" placeholder="Password" name="password">
                            </div>
                        </div>

                        <!--  Re-enter Password  -->
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="reenterPasswors">Re-enter Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control center" id="reenterPasswors" placeholder="Re-enter Password"
                                       name="repeatedPassword">
                            </div>
                        </div>

                        <!--  Phone Number  -->
                        <div class="form-group ">
                            <label class="control-label col-sm-2" for="phone">Phone</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control center" id="phone" placeholder="Phone Number"name="phone">
                            </div>
                        </div>

                        <!--  Country  -->
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="country">Country</label>
                            <div class="col-sm-10">
                                <select class="form-control center" id="country" name="country">
                                    <option>Bulgaria</option>
                                    <option>India</option>
                                    <option>Sweden</option>
                                    <option>Nepal</option>
                                    <option>Bolivia</option>
                                </select>
                            </div>
                        </div>

                        <!--  Address  -->
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="address">Address</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control " id="address" placeholder="Address" name="address">
                            </div>
                        </div>

                        <!--  Submit / Discard  -->
                        <div class="modal-footer">

                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Create account</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

