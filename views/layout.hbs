<!DOCTYPE html>
<html lang="en">

<head>
    <title>Enterprise</title>
    <!-- Latest compiled and minified CSS -->
    <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">-->
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link link rel='stylesheet' href='/stylesheets/theme_2.css'>
    <link link rel='stylesheet' href='/stylesheets/customization.css'>

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
<!--  If User  -->
{{#if user}}
    <header>
        <!--  Navigation line  -->
        <nav class="navbar navbar-default navbar-fixed-top text-uppercase">

            <div class="container-fluid nav-container">
                <!--  Navbar Collapse  -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <!--  Username Field  -->
                    <div class="navbar-header dropdown">
                        <img src="/images/userProfilePictures/{{user.picture}}" class="navbar-header img-logged ">
                        <a class="navbar-brand dropdown-toggle" data-toggle="dropdown" href="" id="">{{user.fullName}}<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a id="dLabelActive" href="/userViews/profile">My Profile</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a id="dLabelClosed" href="/user/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>

                <!--  Navigation  -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav pull-right">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="/project/list" id="projectsView">
                                Projects <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a id="dLabelActive" href="/project/list">Projects</a></li>
                                <div role="separator" class="divider"></div>
                                <li><a id="dLabelClosed" href="/project/list#closedProjects">Statistics</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="/project/list" id="projectsView">
                                Users <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a id="dLabelActive" href="/userViews/list">Profiles</a></li>
                                <div role="separator" class="divider"></div>
                                <li><a id="dLabelClosed" href="/occupation/list">Occupations</a></li>
                                <div role="separator" class="divider"></div>
                                <li><a id="dLabelClosed" href="/rate/list">Rates</a></li>
                            </ul>
                        </li>

                        <li><a href="/team/list">Teams</a></li>

                        <li><a href="/customer/list">Customers</a></li>

                    </ul>
                </div><!-- /.navbar-collapse -->
            </div>
            <h4 class="text-center" style="color: #6c000e; font-weight: bold">{{error}}</h4>

        </nav>

        <!-- Add Content Buttons -->
        {{#if isAdmin}}
            <div class="container" style="margin-top: 70px; margin-bottom: -60px">
                <div class="row">
                    <a class="btn btn-default" href="/project/create"><span class="glyphicon glyphicon-file"></span> New Project</a>
                    <a class="btn btn-default" href="/customer/create"><span class="glyphicon glyphicon-briefcase"></span> New Customer</a>
                    <a class="btn btn-default" href="/team/create"><span class="glyphicon glyphicon-user"></span> New Team</a>
                    <a class="btn btn-default" href="/occupation/create"><span class="glyphicon glyphicon-plus"></span> New occupation</a>
                </div>
            </div>
        {{/if}}
    </header>
{{/if}}

<script>
    $(document).ready(function(){
        $("#error-dismiss-btn").click(function(){
            $("#error-msg").hide();
        });
    });
</script>

{{#if error}}
    <div class="error-msg" id="error-msg">
        <h4>{{error}}</h4>
        <button class="btn btn-link" id="error-dismiss-btn" data-dismiss="error-msg">ok</button>
    </div>
{{/if}}

<!-- If Not User -->
{{{body}}}

</body>

{{#if user}}
    <footer>
        <div class="container-fluid">
            <p>&copy; 2017 - EnterPrice</p>
        </div>
    </footer>
{{/if}}


</html>
