<!DOCTYPE html>
<html lang="en">

<head>
    <title>Enterprice</title>
    <!-- Latest compiled and minified CSS -->
    <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">-->
    <link link rel='stylesheet' href='/stylesheets/theme_2.css'>
    <link link rel='stylesheet' href='/stylesheets/customization.css'>

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
    <!--  If User  -->
    {{#if user}}
        <header>
            <!--  Navigation line  -->
            <div class="navbar navbar-default text-uppercase">
                <div class="container">

                    <!--  Navbar Collapse  -->
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <!--  Username Field  -->
                    <div class="navbar-header dropdown">
                        <a class="navbar-brand dropdown-toggle" data-toggle="dropdown" href="" id="">{{user.fullName}}<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a id="dLabelActive" href="/userViews/userProfile">My Profile</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a id="dLabelClosed" href="/user/logout">Logout</a></li>
                        </ul>
                    </div>

                    <!--  Navigation  -->
                    <ul class="nav navbar-nav pull-right">
                        <li class="dropdown active">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="" id="">Projects<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a id="dLabelActive" href="/userViews/user">Active Projects</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a id="dLabelClosed" href="/userViews/user#closedProjects">Closed Projects</a></li>
                                </ul>
                            </li>
                        <!--<li class="active"><a href="/userViews/user">Projects</a></li>-->
                        <li><a href="#">Teams</a></li>
                        <li><a href="/customer/allCustomersView">Clients</a></li>
                        <li><a href="/userViews/allUsers">Users</a></li>
                    </ul>
                </div>
                </div>
            </div>
        </header>
    {{/if}}

    {{#if error }}
        <div class="home-login-container center-content">
            <h2>{{error}}</h2>
        </div>
    {{/if}}

    <!-- If Not User -->
    {{{body}}}
</body>

<footer>
    <div class="container modal-footer">
        <p>&copy; 2017 - Enterprice</p>
    </div>
</footer>
</html>
