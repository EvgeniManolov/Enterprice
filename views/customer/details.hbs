<main>

    <ol class="container breadcrumb transparent">
        <li><a href="/project/list">Home</a></li>
        <li><a href="/customer/list">All Customers</a></li>
        <li class="active">{{customer.customerName}}</li>
    </ol>

    <div class="container">

        <div class="page-header">
            <h1>{{customer.customerName}}</h1>
        </div>

        <form class="form-horizontal" method="post" action="">
            <fieldset>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="customerName">Name</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" disabled id="customerName" placeholder="" value="{{customer.customerName}}" name="customerName" required >
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="customerPhone">Phone</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" disabled id="customerPhone" placeholder="" value="{{customer.customerPhone}}" name="customerPhone" required >
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="customerEmail">Email</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" disabled id="customerEmail" placeholder="" value="{{customer.customerEmail}}" name="customerEmail">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="customerAddress">Address</label>
                    <div class="col-sm-4 ">
                        <input type="text"  class="form-control" id="customerAddress" disabled placeholder="" value="{{customer.customerAddress}}" name="customerAddress">
                    </div>
                </div>

                {{#if isAdmin}}
                <div class="pull-right">
                    <a class="btn btn-default btn-xs" href="/customer/edit/{{customer.id}}">Edit Customer &raquo</a>
                </div>
                {{/if}}

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="/customer/list">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            Back to All Customers
                        </a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</main>