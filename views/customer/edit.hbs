<main>
    {{#if user}}
        <ol class="container breadcrumb transparent">
            <li><a href="/project/list">Home</a></li>
            <li><a href="/customer/list">All Customers</a></li>
            <li class="active">{{customer.customerName}}</li>
        </ol>

        <div class="container">

            <form class="form-horizontal" method="post" action="">
                <fieldset>

                    <div class="form-group">
                        <label class="col-sm-4 control-label"  for="customerName">Customer Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" disabled id="customerName" placeholder="" value="{{customer.customerName}}" name="customerName" required >
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="customerPhone">Customer Phone</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="customerPhone" placeholder="" value="{{customer.customerPhone}}" name="customerPhone" required >
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="customerEmail">Customer Email</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="customerEmail" placeholder="" value="{{customer.customerEmail}}" name="customerEmail">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="customerAddress">Customer Address</label>
                        <div class="col-sm-4 ">
                            <input type="text"  class="form-control" id="customerAddress" placeholder="" value="{{customer.customerAddress}}" name="customerAddress">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="/customer/list">
                                Back
                            </a>
                            <button type="submit" href="/customer/edit/{{this.id}}" class="btn btn-success">Edit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    {{/if}}
</main>