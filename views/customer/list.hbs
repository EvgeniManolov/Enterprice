<script>
    function myFunction(inputType) {

        // Declare variables
        var input;
        input = document.getElementById(inputType); //search item
/*        filter = input.value.toUpperCase();*/ //search item toUpperCase

/*        $('.row').children().hide();*/
        $('.row').find("h5:contains(" + input + ")").parent().parent().parent().hide();

    }
</script>


<main>
    {{#if user}}
        <ol class="container breadcrumb transparent">
            <li><a href="/project/list">Home</a></li>
            <li class="active">All Customers</li>
        </ol>

        <!--  Body  -->
        <div class="container">

            <div class="page-header">
                <h1>Customers</h1>
            </div>

            <!-- Right Section -->
            <div class="section col-lg-12">

            <div class="row">

                {{#each customers}}
                    <div class="col-md-4 col-xs-6">
                        <div class="thumbnail no-border">
                            <div class="caption thumbnail-details-customers">
                                <h4 id="customerName">{{this.customerName}}</h4>
                                <div class="well"><span class="glyphicon glyphicon-earphone"></span>
                                {{this.customerPhone}}<hr>
                                <span class="glyphicon glyphicon-envelope"></span>
                                {{this.customerEmail}}<hr>
                                <span class="glyphicon glyphicon-map-marker"></span>
                                {{this.customerAddress}}</div>
                            </div>

                            <a href="/customer/details/{{this.id}}" class="btn-sm pull-right">
                                More&nbsp<span class="glyphicon glyphicon-chevron-right"></span>
                            </a>

                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/if}}
</main>

