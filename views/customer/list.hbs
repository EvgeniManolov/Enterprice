
<div class="container body-content">

    <legend>All Customers</legend>

    <!-- List with All CustomersName -->
    <div class="row">
        {{#each customers}}
            <div class="col-md-12">
                <article>
                    <header>
                        <h2>{{this.customerName}}</h2>

                        {{#if isAdmin}}
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/customer/edit/{{this.id}}">Edit Customer &raquo</a>
                        </div>
                        {{/if}}

                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/customer/details/{{this.id}}">Details Customer &raquo</a>
                        </div>
                    </header>
                </article>
            </div>
        {{/each}}
    </div>
</div>