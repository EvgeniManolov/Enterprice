<main>
    {{#if user}}
        <ol class="container breadcrumb transparent">
            <li><a href="/project/list">Home</a></li>
            <li class="active">Create New Customer</li>
        </ol>

        <div class="container">

            <div class="page-header">
                <h1>New Customer</h1>
            </div>

            <form class="form-horizontal" method="post" action="/customer/create">
                <fieldset>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="customerName">Customer name</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="customerName" placeholder="" name="customerName" required >
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="customerPhone">Customer phone</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="customerPhone" placeholder="" name="customerPhone" required >
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="customerEmail">Customer Email</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="customerEmail" placeholder="" name="customerEmail">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="customerAddress">Customer Address</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="customerAddress" placeholder="" name="customerAddress">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="./../project/list">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    {{/if}}
</main>