
<main>
    <div class="container">

        <!--  User Picture - Right Side -->
        <div class="col-sm-4 section">

            <div class="">
                <div class="well white">

                    <img class="img-user" src="/images/userProfilePictures/{{userData.picture}}">

                    <form action="/picture/upload" method="POST" enctype="multipart/form-data">
                        Select an image to upload:
                        <input type="file" name="image">
                        <input type="submit" value="Upload Image">
                    </form>

                    <!--  Name  -->
                    <h3>{{userData.fullName}}</h3><hr>

                    <!--  User Info  -->
                    <p>
                        <span class="glyphicon glyphicon-earphone"></span>
                    {{userData.phone}}<hr>

                    <span class="glyphicon glyphicon-envelope"></span>
                    {{userData.email}}<hr>

                    <span class="glyphicon glyphicon-map-marker"></span>
                    {{userData.address}}
                    </p>
                </div>
            </div>
        </div>

        <!--  User Additional - Right Side -->
        <div class="col-sm-8 section">

            <!--  User Projects  -->
            <div class="">
                <div class="well">
                    <h3>Assigned Projects</h3>
                    <hr>

                    <!--  Projects List  -->
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        Project Name One<button class="btn-sm btn-default pull-right">View</button><hr>

                    <span class="glyphicon glyphicon-ok"></span>
                    Some Kind of Project Name<button class="btn-sm btn-default pull-right">View</button><hr>

                    <span class="glyphicon glyphicon-star"></span>
                    Another Testing Headline<button class="btn-sm btn-default pull-right">View</button><hr>
                    </p>
                </div>
            </div>

            <!--  User Teams  -->
            <div class="">
                <div class="well">
                    <h3>Assigned Teams</h3>
                    <hr>

                    <!--  Teams List  -->
                    <p>
                        <span class="glyphicon glyphicon-user"></span>
                        First Team Name<button class="btn-sm btn-default pull-right">View</button><hr>

                    <span class="glyphicon glyphicon-user"></span>
                    Another Team Name<button class="btn-sm btn-default pull-right">View</button><hr>

                </div>
            </div>
        </div>
    </div>
</main>