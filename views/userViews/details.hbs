
<main>
    {{#if user}}
    <div class="container">

        <!--  User Picture - Right Side -->
        <div class="col-sm-4 section">

            <div class="section">
                <div class="well white">
                    <img class="img-user" src="/images/userProfilePictures/{{userData.picture}}">

                    <!--  Name  -->
                    <h3>{{userData.fullName}}</h3><hr>

                    <!--  User Info  -->
                    <p>
                        <span class="glyphicon glyphicon-earphone"></span>
                    {{userData.phone}}<hr>

                    <span class="glyphicon glyphicon-envelope"></span>
                    {{userData.email}}<hr>

                    <span class="glyphicon glyphicon-map-marker"></span>
                    {{userData.address}}
                    </p>

                </div>
            </div>
        </div>

        <!--  User Additional - Right Side -->
        <div class="col-sm-8 section">

            <!--  User Projects  -->
            <div class="container-border section">
                <div class="well">
                    <h3>Assigned Projects</h3>
                    <hr>

                    <!--  Projects List  -->
                    <p>
                    {{#each projects}}
                        <span class="glyphicon glyphicon-star"></span>
                        {{this.projectName}}<button class="btn-sm btn-default pull-right">View</button><hr>
                    {{/each}}
                    </p>
                </div>
            </div>

            <!--  User Teams  -->
            <div class="">
                <div class="well">
                    <h3>Assigned Teams</h3>
                    <hr>

                    <!--  Teams List  -->
                    <p>
                    {{#each teams}}
                        <span class="glyphicon glyphicon-star"></span>
                        {{this.teamName}}<button class="btn-sm btn-default pull-right">View</button><hr>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{/if}}
</main>