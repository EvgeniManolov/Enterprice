    <!-- Tab Views -->
    <div class="tab-content">

        <!-- Add Content Buttons -->
        <div class="row">
            <div class="container section">

                <a href="../project/create">
                    <button class="btn btn-default">New Project</button>
                </a>

                <a href="../customer/create">
                        <button class="btn btn-default">New Customer</button>
                </a>

                <a href="../rate/create">
                    <button class="btn btn-default">Rates</button>
                </a>

            </div>
        </div>

        <!-- Projects Tab -->
        <div role="tabpanel" class="tab-pane active" id="home">
            <div class="container">

                <!-- Active Projects -->
                <div class="row">
                    <div class="container section" id="activeProjects">

                        <h1 class="">Active projects</h1>

                        <!-- Filters and Stuff -->
                        <div class="form-group well">

                            <label class="text-uppercase" for="myInput">
                                Search:
                            </label>

                            <input class="navbar-form form-inline form-control"
                                   type="text"
                                   id="myInput"
                                   onkeyup="myFunction()"
                                   placeholder="Search project / customer.." >
                        </div>

                        <!-- Table Active Projects -->
                        <table class="col-lg-12" id="activeProjectsTable">
                                <tr>
                                    <th>Project name/ Customer</th>
                                    <th>Progress</th>
                                    <th>Team</th>
                                    <th>Due date</th>
                                    <th>Details</th>
                                </tr>

                                    {{#each projects}}
                                        {{#if this.projectActive}}
                            <tr>
                                <td class="" id="projectName">
                                    <h4>{{this.projectName}}</h4>
                                    <h6>{{this.projectCustomer.customerName}}</h6>
                                </td>

                                <td class="" id="projectProgress">{{this.projectProgress}}%
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">

                                        </div>
                                    </div>
                                </td>
                                <td class="" id="projectTeam">{{this.projectTeam}}</td>
                                <td class="" id="projectDueDate">
                                    <span class="date"><time datetime="">{{this.projectDueDate}}</time></span>
                                </td>
                                <td>
                                <a href="/project/details/{{this.id}}"><button class="btn btn-primary">More</button></a>
                                </td>
                            </tr>

                                        {{/if}}
                                    {{/each}}


                        </table>
                    </div>
                </div>

                <!-- Closed Projects -->
                <div class="row">
                    <div class="container section">

                        <h1 class="">Closed projects</h1>

                        <input class="section col-lg-4" type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for project/customer..">

                        <table class="col-lg-12">

                            <tr>
                                <th>Project name/ Customer</th>
                                <th>Progress</th>
                                <th>Team</th>
                                <th>Due date</th>
                                <th>Details</th>
                            </tr>

                            <tr>
                            {{#each projects}}
                                {{#unless this.projectActive}}
                                    <tr>
                                        <td class="" id="projectName">
                                            <h4>{{this.projectName}}</h4>
                                            <h6>{{this.projectCustomer.customerName}}</h6>
                                        </td>

                                        <td class="" id="projectProgress">{{this.projectProgress}}%
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">

                                                </div>
                                            </div>
                                        </td>
                                        <td class="" id="projectTeam">{{this.projectTeam}}</td>
                                        <td class="" id="projectDueDate">
                                            <span class="date"><time datetime="">{{this.projectDueDate}}</time></span>
                                        </td>
                                        <td>
                                            <a href="/project/details/{{this.id}}"><button class="btn btn-primary">More</button></a>
                                        </td>
                                    </tr>

                                {{/unless}}
                            {{/each}}
                            </tr>

                        </table>
                    </div>
                </div>

            </div>
        </div>

        <!-- Profile Tab -->
        <div role="tabpanel" class="tab-pane" id="profile">...</div>

        <!-- Messages Tab -->
        <div role="tabpanel" class="tab-pane" id="messages">...</div>

        <!-- Settings Tab  -->
        <div role="tabpanel" class="tab-pane" id="settings">...</div>
    </div>

</div>


