
{{#if user}}
<div class="container body-content">

    <legend>All Teams</legend>

    <!-- List with All CustomersName -->
    <div class="row">
        {{#each teams}}
            <div class="col-md-12">
                <article>
                    <header>
                        <h2>{{this.teamName}}</h2>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/team/details/{{this.id}}">Details Team&raquo;</a>
                        </div>
                    </header>
                </article>
            </div>
        {{/each}}
    </div>
</div>
{{/if}}