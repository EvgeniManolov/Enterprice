
<main>
    <div class="container">
{{#if user}}


        <div class="col-lg-12">
            <h2>Teams</h2>
            <hr>
        </div>

        {{#each teams}}
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="thumbnail">
                    <div class="well">

                        <h5>{{this.teamName}}</h5>
                        <hr>

                        {{#each userID}}
                            <img class="img-team" src="/images/userProfilePictures/{{this.picture}}">
                            {{this.fullName}}
                            <br>
                        {{/each}}
                    </div>

                    <div class="">
                        <a class="btn-sm pull-right text-uppercase" href="/team/details/{{this.id}}">
                            Details &nbsp <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
{{/if}}
</div>
</main>